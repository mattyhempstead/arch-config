# vim:ft=conf
# Workspace stuff

set $middle DP-5
set $left   HDMI-0
set $right  DP-1


workspace "00:0" output $middle
workspace "01:1" output $middle
workspace "02:2" output $middle
workspace "03:3" output $middle
workspace "04:4" output $middle
workspace "05:5" output $middle
workspace "06:6" output $middle
workspace "07:7" output $middle
workspace "08:8" output $middle
workspace "09:9" output $middle

workspace "10:0" output $right
workspace "11:1" output $right
workspace "12:2" output $right
workspace "13:3" output $right
workspace "14:4" output $right
workspace "15:5" output $right
workspace "16:6" output $right
workspace "17:7" output $right
workspace "18:8" output $right
workspace "19:9" output $right

workspace "20:0" output $left
workspace "21:1" output $left
workspace "22:2" output $left
workspace "23:3" output $left
workspace "24:4" output $left
workspace "25:5" output $left
workspace "26:6" output $left
workspace "27:7" output $left
workspace "28:8" output $left
workspace "29:9" output $left


# Switch to selected number only on current monitor
bindsym $mod+1 exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)1:1
bindsym $mod+2 exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)2:2
bindsym $mod+3 exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)3:3
bindsym $mod+4 exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)4:4
bindsym $mod+5 exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)5:5
bindsym $mod+6 exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)6:6
bindsym $mod+7 exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)7:7
bindsym $mod+8 exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)8:8
bindsym $mod+9 exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)9:9
bindsym $mod+0 exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)10:0


# Move focused container to selected number on current monitor
bindsym $mod+Shift+1 exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)1:1
bindsym $mod+Shift+2 exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)2:2
bindsym $mod+Shift+3 exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)3:3
bindsym $mod+Shift+4 exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)4:4
bindsym $mod+Shift+5 exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)5:5
bindsym $mod+Shift+6 exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)6:6
bindsym $mod+Shift+7 exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)7:7
bindsym $mod+Shift+8 exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)8:8
bindsym $mod+Shift+9 exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)9:9
bindsym $mod+Shift+0 exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[] | select(.focused==true).name' | cut -b 1)10:0
